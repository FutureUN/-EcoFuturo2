			<ul class="no-margin no-list row center-xs middle-xs">
				<li class="col-md">
					<h1 class="no-margin" id="tam_logo"><%= link_to "EcoFuturo", root_path %></h1>
				</li>
				<li class="col-md">
					<%= link_to "Inicio", root_path, class:"menuar" %>
				</li>
				<li class="col-md">
          		<%= link_to "Articulos", articles_path, class:"menuar" %>
